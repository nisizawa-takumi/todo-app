// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Todo {
  id          String   @id @default(uuid()) // 文字列型の一意ID
  title       String
  description String
  completed   Boolean  @default(false)
  priority    String
  due_date    DateTime // 期限日
}